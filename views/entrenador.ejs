<%- include("Template/cabecera", {tituloweb: "Pagina de inicio" }) %>
  <div class="container">
    <br>
    <h1>LISTA DE ENTRENADORES</h1>
    <a class="btn btn-success btn-block my-4" href="/entrenador/crearEntrenador">Crear un nuevo entrenador</a>
    <hr>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Bio</th>
          <th scope="col">Ciudad</th>
          <th scope="col">Lista Pokemon</th>
          <th scope="col">Acci√≥n</th>
        </tr>
      </thead>
      <tbody>
        <% if (arrayEntrenador.length> 0) { %>
          <% arrayEntrenador.forEach(entrenador=> { %>
            <tr>
              <th scope="row">
                <%= entrenador.id %>
              </th>
              <td>
                <%= entrenador.nombre %>
              </td>
              <td>
                <%= entrenador.bio %>
              </td>
              <td>
                <%= entrenador.ciudad %>
              </td>
              <td>
                <%= entrenador.listapokemon %>
              </td>
              <td>
                <a class="btn btn-warning btn-sm" href="entrenador/<%= entrenador.id %>">Editar/Eliminar</a>
              </td>
            </tr>
            <% }) %>
              <% } %>
      </tbody>
    </table>

  </div>
  <%- include("Template/footer") %>
