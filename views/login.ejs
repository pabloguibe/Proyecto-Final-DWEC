<%- include("Template/cabeceraIndex.ejs", {tituloweb: "Pagina de inicio"}) %>
    <section>


        <img src="images/Captura.PNG" alt="logo" height="450px">

        <form id="form1" action="/login" class="login" name="login" method="post" onsubmit="return validar_login();">


            <h1 class="login__titulo">DEHESA FC</h1>
            <h2 class="login__titulo">Login</h2>

            <input id="nombre_usuario" class="login__input" type="text" name="nombre_usuario" maxlength="20" required>
